<div class='container'>
    <div  class="row">
        <div class='col s10 offset-s1'>
            <div class="card black">
                <div class="card-content">
                    <p class='flow-text center strong white-text'>Hello {{user.username}}!</p>
                    <p class="flow-text white-text center"> Your average score is {{average}}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class='col s10 offset-s1'>
            <ul class="collection black">
                <li class="collection-item center flow-text white-text black">Score History:</li>
                {{#each user.scores as |score|}}            
                    <li class="collection-item avatar black">
                        <i class="fas fa-angle-double-right circle teal black-text"></i>
                        <p class='title white-text'>You recieved a score of {{score.score}} out of 100.</p>
                        <p class="white-text">On {{score.createdAt}}</p>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>