<div class='container'>
    <div class="row">
        <div class="col s10 offset-s1">
            <form class="card black darken-4">
                <div class="card-content white-text">
                    <span class="card-title center">Login</span>
                </div>

                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <label class="active white-text" for="username">Username</label>
                        <input  id="username" name='username' type="text" class="white-text"/>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <label class="active white-text" for="password">Password</label>
                        <input  id="password" name='password' type="password" class="validate white-text"/>
                    </div>
                </div>

                <div class='row'>
                    <div class="input-field col s10 offset-s1 center">
                        <button type='submit' class="btn-floating btn-large teal pulse"><i class="fas fa-sign-in-alt"></i></button>
                    </div>
                </div>
                
                <div class='row'>
                    <div class="card-action col s10 offset-s1">
                        <p class='right-align white-text'>Dont have one? <a href="/signup" class='teal-text'>Create One!</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>